{{define "shelter-content-header"}}
    <header>
        <div class="pure-g">
            {{with .Shelter}}
                <div class="pure-u-2-3">
                    {{with .PBShelter}}
                        <h1><a href="{{.URL}}" target="_blank">{{.Name}}</a></h1>
                    {{end}}
                    {{with .PBUpdate}}
                        <p>Updated at {{.Created | dateFormat}}</p>
                    {{end}}
                </div>
                <div class="pure-u-1-3">
                    {{with .PBUpdate}}
                        {{if .Cats}}
                            <a class="pure-button" href="/{{.ShelterId}}?type=cat">Cats</a>
                        {{end}}
                        {{if .Dogs}}
                            <a class="pure-button" href="/{{.ShelterId}}?type=dog">Dogs</a>
                        {{end}}
                        {{if .Cats}}
                            {{if .Dogs}}
                                <a class="pure-button" href="/{{.ShelterId}}">All</a>
                            {{end}}
                        {{end}}
                    {{end}}
                </div>
            {{end}}
        </div>
    </header>
{{end}}
