{{define "navigation-shelters"}}
    <div class="pure-u-1" id="shelters">
        {{with .Shelters}}
            {{range .}}
                {{$selected := .Selected}}
                {{with .PBShelter}}
                    <a href="/{{.Id}}" class="pure-g">
                        <section {{if $selected}} class="selected"{{end}}>
                            <div class="pure-u">
                                <img src="{{.LogoURL}}" alt="{{.Name}}">
                            </div>
                            <div class="pure-u-3-4">
                                <h4>{{.FullName}}</h4>
                                <div class="city">{{.City}}</div>
                {{end}}
                {{with .PBUpdate}}
                                <div class="offers">Offers
                                {{if .Cats}}
                                    <span>{{.Cats}} cats</span>
                                {{end}}
                                {{if .Cats}}
                                    {{if .Dogs}}
                                        and
                                    {{end}}
                                {{end}}
                                {{if .Dogs}}
                                    <span>{{.Dogs}} dogs</span>
                                {{end}}</div>
                {{end}}
                            </div>
                        </section>
                    </a>
            {{end}}
        {{end}}
    </div>
{{end}}
